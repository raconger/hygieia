# Application
APP_NAME=Hygieia
APP_ENV=development
DEBUG=true
SECRET_KEY=change-this-to-a-random-secret-key
API_VERSION=v1

# Database
DATABASE_URL=postgresql://hygieia:hygieia@localhost:5432/hygieia
TIMESCALEDB_HOST=localhost
TIMESCALEDB_PORT=5432
TIMESCALEDB_DB=hygieia
TIMESCALEDB_USER=hygieia
TIMESCALEDB_PASSWORD=hygieia

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# API Server
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Frontend
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# Garmin Connect API
GARMIN_CLIENT_ID=your_garmin_client_id
GARMIN_CLIENT_SECRET=your_garmin_client_secret
GARMIN_REDIRECT_URI=http://localhost:8000/api/v1/auth/garmin/callback

# Oura Ring API
OURA_CLIENT_ID=your_oura_client_id
OURA_CLIENT_SECRET=your_oura_client_secret
OURA_REDIRECT_URI=http://localhost:8000/api/v1/auth/oura/callback

# Strava API
STRAVA_CLIENT_ID=your_strava_client_id
STRAVA_CLIENT_SECRET=your_strava_client_secret
STRAVA_REDIRECT_URI=http://localhost:8000/api/v1/auth/strava/callback

# Wyze API (if available)
WYZE_EMAIL=your_wyze_email
WYZE_PASSWORD=your_wyze_password

# Weather API (OpenWeatherMap)
OPENWEATHER_API_KEY=your_openweather_api_key

# Air Quality API (AirNow or similar)
AIRNOW_API_KEY=your_airnow_api_key

# Location for weather/AQI (default location)
DEFAULT_LATITUDE=37.7749
DEFAULT_LONGITUDE=-122.4194

# Sync Configuration
SYNC_INTERVAL_MINUTES=60
HISTORICAL_BACKFILL_DAYS=90

# Alert Configuration
ENABLE_ALERTS=true
ALERT_EMAIL_FROM=alerts@hygieia.app
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Push Notifications (optional - for future use)
PUSH_NOTIFICATION_SERVICE=
PUSH_NOTIFICATION_KEY=

# Security
JWT_SECRET_KEY=change-this-to-a-random-jwt-secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption (for storing API credentials)
ENCRYPTION_KEY=change-this-to-a-32-byte-base64-key

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Data Retention (days)
RAW_DATA_RETENTION_DAYS=365
AGGREGATED_DATA_RETENTION_DAYS=1825
ALERT_HISTORY_RETENTION_DAYS=90

# Feature Flags
ENABLE_CORRELATION_ANALYSIS=true
ENABLE_ANOMALY_DETECTION=false
ENABLE_ML_FEATURES=false
ENABLE_EXPORT=true
